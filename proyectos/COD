#include <iostream>
using namespace std;

class menu {
private:
    string user_name;
    int level;

public:
    void bienvenida(string name, int l) {
        user_name = name;
        level = l;
        cout << "Bienvenido de nuevo " << name << ", tu nivel actual es " << l << endl;
    }

    void cargarModo(const string& mapa) {
        int mode;
        cout << "---Modo---\n1-En pelotón\n2-Individual" << endl;
        cin >> mode;
        cout << "Cargando partida en " << mapa << "..." << endl;
    }

    void elegirMapa() {
        int map;
        string mapas[] = {
            "Shattered evil", "The tomb", "Citadelle des morts",
            "Terminus", "Liberty falls"
        };

        cout << "---Mapa---" << endl;
        for (int i = 0; i < 5; i++) {
            cout << i + 1 << "-" << mapas[i] << endl;
        }

        cin >> map;
        if (map >= 1 && map <= 5)
            cargarModo(mapas[map - 1]);
        else
            cout << "No eligió ningún mapa, reiniciando..." << endl;
    }

    void mission2() {
        int mission;
        cout << "---Menu---\n1-Estandar\n2-Guiado\n3-Agonía\n4-Modo abominación" << endl;
        cin >> mission;

        switch (mission) {
            case 1:
            case 2:
                elegirMapa();
                break;
            case 3:
                cout << "Cargando mapa aleatorio en Agonía..." << endl;
                break;
            case 4:
                cout << "Cargando Liberty falls con Moe..." << endl;
                break;
            default:
                cout << "No eligió ningún modo disponible, reiniciando..." << endl;
                break;
        }
    }
};

int main() {
    menu m1;
    m1.bienvenida("User", 202);
    m1.mission2();
    return 0;
}


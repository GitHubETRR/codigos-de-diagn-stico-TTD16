//Calcular Ã¡rea

#include <stdio.h>
#include <stdio.h>

int main(){
    float radio, area, pi=3.14;
    printf("Bienvenido al programa que calcula el area de un circulo segun su radio\n");
    printf("Para comenzar, ingrese el radio de su circulo: \n");
    scanf("%f", &radio);
    
    area = pi*(radio*radio);
    
    printf("El area de su circulo es de %f", area);
}
